<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#99000000"
        android:orientation="vertical"
        android:padding="15dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="41">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:gravity="right">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/offer"
                    android:textColor="#88BEB1"
                    android:layout_gravity="left|bottom"
                    android:textAllCaps="true"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:paddingBottom="5dp" />

                <Button
                    android:id="@+id/btnEdit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_edit" />

                <Button
                    android:id="@+id/btnDelete"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_delete" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single_offer_view_add_to_favorites_text"
                    android:id="@+id/single_offer_view_add_to_favorites_button"
                    style="?android:attr/buttonStyleSmall" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single_offer_view_remove_from_favorites_text"
                    android:id="@+id/single_offer_view_remove_from_favorites_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:background="#4F9181"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <HorizontalScrollView
                    android:id="@+id/viewImages"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp">

                    <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/layoutImages"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    </org.apmem.tools.layouts.FlowLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:background="@drawable/shape_badge_list"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_row="2"
                android:layout_column="1"/>

            <Button
                android:id="@+id/btnMessage"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:text="@string/button_messsage"
                android:visibility="gone" />

            <EditText
                android:id="@+id/getMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:editable="true"
                android:hint="@string/single_offer_message_edit_text_hint"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSend"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:text="@string/button_send"
                android:visibility="gone" />

        </GridLayout>

    </FrameLayout>

</LinearLayout>