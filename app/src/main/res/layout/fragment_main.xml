<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@drawable/background">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo_shadow"
            android:layout_marginTop="80dp"
            android:alpha=".6" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="@string/new_card_demand"
            android:id="@+id/btnNewDemand"
            android:layout_gravity="center|right"
            android:layout_marginTop="80dp"
            android:background="#AAFF006D"
            android:drawableLeft="@drawable/offer"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="@string/new_card_offer"
            android:id="@+id/btnNewOffer"
            android:layout_gravity="left|center"
            android:layout_marginTop="80dp"
            android:background="#AA88BEB1"
            android:drawableLeft="@drawable/demand"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" />

    </FrameLayout>

</RelativeLayout>
