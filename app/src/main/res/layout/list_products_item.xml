<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:gravity="top"  android:scaleType="centerCrop"
        />

    <ImageView android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"  android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="100dp"
        android:layout_alignParentRight="true">

        <TextView android:id="@+id/tvPrimaryTags"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:text="tag, tag, tag, tag"/>

        <TextView android:id="@+id/tvSecondaryTags"
            android:text="sectag, sectag, sectag, sectag"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="normal"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp" />

        <TextView android:id="@+id/tvDistance"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Distance: 9.9 km"/>

        <TextView android:id="@+id/tvPrice"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Price: 9.99 â‚¬"/>

        <TextView android:id="@+id/tvUser"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="italic"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Peter Lustig"/>

    </LinearLayout>

</RelativeLayout>