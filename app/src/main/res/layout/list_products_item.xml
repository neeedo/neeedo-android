<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#88BEB1"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/layoutImage"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="#999999">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="top"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPrimaryTags"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="tag, tag, tag, tag"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSecondaryTags"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="sectag, sectag, sectag, sectag"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Distance: 9.9 km"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Peter Lustig"
            android:textSize="10dp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:text="9.99 â‚¬"
        android:textSize="12dp"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_badge_list"
        android:padding="10dp" />

</RelativeLayout>